@prefix : <http://www.seqweb.org/> .
@prefix seq: <http://www.seqweb.org/> .
@prefix oeis: <http://www.oeis.org/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix cnt: <http://www.w3.org/2011/content#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
# @prefix sh: <http://www.w3.org/ns/shacl#> .               # maybe later
# @prefix skos: <http://www.w3.org/2004/02/skos/core#> .    # maybe later


# Sequence class
:Sequence a owl:Class ;
    rdfs:label "Sequence"@en ;
    rdfs:comment "An OEIS and mathematical integer sequence modeled in the SeqWeb knowledge graph."@en . 

:hasTextList a owl:ObjectProperty ;
    rdfs:domain :Sequence ;
    rdfs:range rdf:List ;
    rdfs:comment "Links a Sequence to an ordered list of :Text blocks."@en .

# Text class
:Text a rdfs:Class ;
    rdfs:subClassOf cnt:ContentAsText ,
        [ a owl:Restriction ;
          owl:onProperty cnt:characterEncoding ;
          owl:hasValue "utf-8"
        ] ;
    rdfs:label "Text"@en ;
    rdfs:comment "DRYer synonym for cnt:ContentAsText where encoding is assumed UTF-8."@en .

# SectionType class
:SectionType a rdfs:Class ;
    rdfs:label "SectionType"@en ;
    rdfs:comment "A type of OEIS section that a Text appears in"@en .

:letterCode a owl:DatatypeProperty ;
    rdfs:domain :SectionType ;
    rdfs:range xsd:string ;
    rdfs:comment "The single-letter code used for the SectionType"@en .

# AugmentedSectionType mixin class
:AugmentedSectionType a owl:Class ;
    rdfs:label "Augmented SectionType"@en ;
    rdfs:subClassOf :SectionType ;
    rdfs:comment "A SectionType variant introduced by SeqWeb to supplement the classic OEIS-defined types."@en .

seq:SectionTypeOrder a rdf:List ;
    rdfs:label "Presentation SectionType Order"@en ;
    rdfs:comment "Presentation order used by the classic OEIS, with some inserted augmentations"@en ;
    rdf:first :IdentificationSection ;
    rdf:rest (
        :ExperimentalSection    # augmentation
        :SequenceValuesSection  # augmentation
        :SequenceLine1Section
        :SequenceLine2Section
        :SequenceLine3Section
        :NameSection
        :ReferenceSection
        :LinkSection
        :FormulaSection
        :CrossReferenceSection
        :AuthorSection
        :OffsetSection
        :ExtensionSection
        :ExampleSection
        :MapleProgramSection
        :MathematicaProgramSection
        :OtherProgramSection
        :KeywordsSection
        :CommentSection
    ) .

# Classic SectionTypes
:IdentificationSection a :SectionType ;
    rdfs:label "Identification"@en ;
    :letterCode "I" .

:SequenceLine1Section a :SectionType ;
    rdfs:label "Sequence line 1"@en ;
    :letterCode "S" .

:SequenceLine2Section a :SectionType ;
    rdfs:label "Sequence line 2"@en ;
    :letterCode "T" .

:SequenceLine3Section a :SectionType ;
    rdfs:label "Sequence line 3"@en ;
    :letterCode "U" .

:NameSection a :SectionType ;
    rdfs:label "Name"@en ;
    :letterCode "N" .

:ReferenceSection a :SectionType ;
    rdfs:label "Reference"@en ;
    :letterCode "D" .

:LinkSection a :SectionType ;
    rdfs:label "Link"@en ;
    :letterCode "H" .

:FormulaSection a :SectionType ;
    rdfs:label "Formula"@en ;
    :letterCode "F" .

:CrossReferenceSection a :SectionType ;
    rdfs:label "Cross-reference"@en ;
    :letterCode "Y" .

:AuthorSection a :SectionType ;
    rdfs:label "Author"@en ;
    :letterCode "A" .

:OffsetSection a :SectionType ;
    rdfs:label "Offset"@en ;
    :letterCode "O" .

:ExtensionSection a :SectionType ;
    rdfs:label "Extension or error note"@en ;
    :letterCode "E" .

:ExampleSection a :SectionType ;
    rdfs:label "Example"@en ;
    :letterCode "e" .

:MapleProgramSection a :SectionType ;
    rdfs:label "Maple program"@en ;
    :letterCode "p" .

:MathematicaProgramSection a :SectionType ;
    rdfs:label "Mathematica program"@en ;
    :letterCode "t" .

:OtherProgramSection a :SectionType ;
    rdfs:label "Program in other language"@en ;
    :letterCode "o" .

:KeywordsSection a :SectionType ;
    rdfs:label "Keywords"@en ;
    :letterCode "K" .

:CommentSection a :SectionType ;
    rdfs:label "Comment"@en ;
    :letterCode "C" .

# Augmented Section types

:ExperimentalSection a owl:Class ;
    rdfs:label "Experimental Section"@en ;
    rdfs:subClassOf :SectionType ;
    rdf:type :AugmentedSectionType ;
    :letterCode "X" ;
    rdfs:comment "Experimental section."@en .

:SequenceValuesSection a owl:Class ;
    rdfs:label "Sequence Values Section"@en ;
    rdfs:subClassOf :SectionType ;
    rdf:type :AugmentedSectionType ;
    :letterCode "V" ;
    rdfs:comment "Concatentated S, T & U lines."@en .



